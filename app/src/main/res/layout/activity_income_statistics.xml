<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IncomeStatisticsActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="@string/income_statistics_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:text="@string/statistics_subtitle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <include layout="@layout/activity_chart" />

    <!--  Color for ACTUAL, DESFASE AND PRESUPUESTO  -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:gravity="center"

            android:text="@string/statistics_actual"
            android:textAppearance="?android:attr/textAppearanceLarge"

            android:drawablePadding="5dp"
            android:maxLines="1"
            app:drawableLeftCompat="@drawable/circle_green" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:text="@string/statistics_gap"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:drawablePadding="5dp"
            android:maxLines="1"
            app:drawableLeftCompat="@drawable/circle_green_dark" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:text="@string/statistics_budget"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:drawablePadding="5dp"
            android:maxLines="1"
            app:drawableLeftCompat="@drawable/circle_gray"/>
    </LinearLayout>


    <!--   Progress bar     -->
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/progressBar"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/gris"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="50" />


</LinearLayout>